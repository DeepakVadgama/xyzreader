<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="4dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@color/photo_placeholder"
            tools:src="@drawable/placeholder_article_photo"
            android:contentDescription="@string/article_image"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/headline_padding_bottom"
            android:paddingLeft="@dimen/headline_padding_sides"
            android:paddingRight="@dimen/headline_padding_sides"
            android:paddingTop="@dimen/headline_padding_top"
            tools:text="Mysteries of Universe Solved"
            />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/subtext_padding_bottom"
            android:paddingLeft="@dimen/headline_padding_sides"
            android:paddingRight="@dimen/headline_padding_sides"
            android:singleLine="true"
            tools:text="July 19, 2010 by Carl Sagan"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
